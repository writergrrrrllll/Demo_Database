USE SMHA; 
Select P.PERSON_LNAME AS 'Last Name', P.PERSON_FNAME AS 'First Name', DATE_FORMAT(P.PERSON_DOB,'%Y') AS 'Birth Year',
        P.PERSON_ID AS 'Hockey ID', PL.PLAYER_IS_SKATER AS 'Skater', PL.PLAYER_IS_GOALIE AS 'Goalie', P.PERSON_PHONE AS 'Phone'
FROM RELATIONSHIP R
JOIN PERSON P ON P.PERSON_ID = R.PLAYER_ID
JOIN PLAYER PL ON PL.PERSON_ID = R.PLAYER_ID
JOIN TEAM_PLAYER TP ON R.PLAYER_ID = TP.PLAYER_ID
JOIN PERSON P1 on TP.PLAYER_ID = P1.PERSON_ID
JOIN TEAM T ON TP.TEAM_ID = T.TEAM_ID
WHERE T.TEAM_ID = '00002'
ORDER BY P.PERSON_LNAME; 

USE SMHA; 
SELECT  L.LOCAT_NAME, COUNT(GAME_ID) AS 'Number of Games', CONCAT(L.LOCAT_ADDR1, ',', L.LOCAT_CITY, ',', L.LOCAT_PROV_STATE, ',', L.LOCAT_ZIP) AS 'Location Address',
        L.LOCAT_PHONE, L.LOCAT_EMAIL
FROM GAME G
JOIN LOCATION L on L.LOCAT_ID = G.LOCAT_ID
GROUP BY L.LOCAT_ID;


USE SMHA; 
SELECT  G.LOCAT_ID, L.LOCAT_NAME AS 'Place', CONCAT(L.LOCAT_ADDR1, ',', L.LOCAT_CITY, ',', L.LOCAT_PROV_STATE, ',', L.LOCAT_ZIP) AS 'Location Address', 
        DATE_FORMAT(G.GAME_DATE, '%m %d %') AS 'Game Date'
FROM GAME G
JOIN LOCATION L ON G.LOCAT_ID = L.LOCAT_ID
JOIN LEAGUE_OFFICIAL LO ON G.REF_ID = LO.PERSON_ID
WHERE LO.PERSON_ID = 'REF2'; 
